.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        =link_to new_group_path(current_user) do
          = icon('far', 'edit', class: "top-items__icons--btn")
        =link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: "top-items__icons--btn") 
  .side-bar__group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .list-name
            = group.name
          .list-message
            = group.show_last_message